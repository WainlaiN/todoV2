<div class="container mt-5">
    <div class="row">
        <nav class="navbar navbar-dark bg-primary">
            <div class="col-md-12">
                <div class="d-flex justify-content-between align-items-center activity">
                    <div><i class="fa fa-clock-o"></i><span class="ml-2">{{ "now"|date("d/m/Y h:m") }}</span></div>
                    <form class="form-inline">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox"/> Todo
                            </label>
                            <label>
                                <input type="checkbox"/> In Progress
                            </label>
                            <label>
                                <input type="checkbox"/> Done
                            </label>
                        </div>
                    </form>
                    <div class="">
                        <form class="form-inline">
                            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                        </form>
                    </div>
                </div>
            </div>
        </nav>
    </div>
    <div class="mt-3">
        <ul class="list list-inline">
            {% for task in tasks %}
                <li class="d-flex justify-content-between">
                    <div class="d-flex flex-row align-items-center col-lg-8">
                        <div class="ml-2">
                            <a href="{{ path('task_edit', {'id' : task.id }) }}">
                                <h6 class="mb-0">{{ task.title }}</h6>
                            </a>
                            <div class="d-flex flex-row mt-1 text-black-50">
                                <div>
                                    <span class="ml-2"> {{ task.content |striptags| slice(0, 100) ~ '...' }}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex flex-row align-items-start col-lg-1">
                        <div class="ml-2">
                            <h6 class="mb-0"><small>{{ task.user }}</small></h6>
                            <div class="d-flex flex-row mt-1 text-black-50">
                                <div>
                                            <span class="date-time"><i
                                                        class="fas fa-clock"></i> {{ task.createdAt|date("d/m/Y") }}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex flex-row align-items-center">
                        <div class="d-flex flex-column mr-2">
                            <div class="profile-image">
                                {% if task.isDone %}
                                    <i class="fa fa-check-circle checkicon"></i>
                                {% else %}
                                    <i class="fas fa-times-circle crossicon"></i>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>
</div>
</div>

