<div class="row d-flex justify-content-center container">
    <div class="col-md-12">
        <div class="card-hover-shadow-2x mb-3 card">
            <div class="card-header-tab card-header">
                <div class="card-header-title font-size-lg text-capitalize font-weight-normal"><i
                            class="fa fa-tasks"></i>&nbsp;Liste des TÃ¢ches
                </div>
            </div>
            <div style="position: static;" class="ps ps--active-y">
                <div class="ps-content">
                    <ul class=" list-group list-group-flush">
                        {% for task in tasks %}
                            <li class="list-group-item">
                                {% if task.isDone %}
                                    <div class="todo-indicator bg-success"></div>
                                {% elseif task.inProgress %}
                                    <div class="todo-indicator bg-warning"></div>
                                {% else %}
                                    <div class="todo-indicator bg-danger"></div>
                                {% endif %}
                                <div class="widget-content p-0">
                                    <div class="widget-content-wrapper">
                                        <div class="widget-content-left mr-2">
                                            <div>
                                                {% if task.isDone %}
                                                    <i class="fa fa-check-circle checkIcon"></i>
                                                {% elseif task.inProgress %}
                                                    <i class="fas fa-spinner progressIcon"></i>
                                                {% else %}
                                                    <i class="fas fa-times-circle crossIcon"></i>
                                                {% endif %}
                                            </div>
                                        </div>
                                        <div class="widget-content-left">
                                            <div class="widget-heading"><a
                                                        href="{{ path('task_edit', {'id' : task.id }) }}">{{ task.title }}</a>
                                                <div class="badge badge-danger ml-2">Rejected</div>
                                            </div>
                                            <div class="widget-subheading"><i>de {{ task.user }}</i></div>
                                        </div>
                                        <div class="widget-content-right">
                                            <button class="border-0 btn-transition btn btn-outline-success"><i
                                                        class="fa fa-check"></i></button>
                                            <a href="{{ path('task_delete', {'id' : task.id }) }}">
                                                <button class="border-0 btn-transition btn btn-outline-danger"><i
                                                            class="fa fa-trash"></i></button>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>

            <div class="d-block text-right card-footer">
                <button class="mr-2 btn btn-link btn-sm">Cancel</button>
                <button class="btn btn-primary">Add Task</button>
            </div>
        </div>
    </div>
</div>