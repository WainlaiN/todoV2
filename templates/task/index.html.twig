{% block javascripts %}

{% endblock %}


{% block body %}

    <div class="col-md-12">
        <div class="card">
            <div class="card-header-tab card-header justify-content-between">
                <div class="card-header-title font-size-lg text-capitalize font-weight-normal"><i
                            class="fa fa-tasks"></i>&nbsp;Liste des Tâches ({{ tasks.getTotalItemCount }})
                </div>
                <div class="btn-group" role="group" aria-label="task status">
                    <button type="button" class="btn btn-primary">
                        <a href="{{ path('homepage') }}"><i class="fas fa-list-ul"></i> Tout</a>
                    </button>
                    <button type="button" class="btn btn-danger">
                        <a href="{{ path('task_list_todo') }}"><i class="fas fa-times-circle"></i> Todo</a>
                    </button>
                    <button type="button" class="btn btn-warning">
                        <a href="{{ path('task_list_progress') }}"><i class="fas fa-spinner"></i> In Progress</a>
                    </button>
                    <button type="button" class="btn btn-success">
                        <a href="{{ path('task_list_done') }}"><i class="fa fa-check"></i> Done</a>
                    </button>
                </div>
                <div>
                    <label>
                        <input id="search" class="search-query form-control" placeholder="Chercher"/>
                    </label>
                    <button class="btn btn-danger" type="button">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
            {{ include('task/_task.html.twig') }}
            <div class="d-block card-footer d-inline-flex justify-content-between">
                <div class="navigation">
                    {{ knp_pagination_render(tasks) }}
                </div>
                <div class="text-right">
                    <a href="{{ path('task_create') }}">
                        <button class="btn btn-primary">Ajouter une tâche</button>
                    </a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}






