{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">

        <section class="jumbotron shadow-lg p-3 m-5">
            <h2 class="jumbotron-heading text-center">Ajouter une tâche</h2>
        {{ form_start(form, {'action' : path('task_create')}) }}
        {{ form_widget(form) }}

        <button type="submit" class="btn btn-success pull-right">Ajouter</button>
        {{ form_end(form) }}

        <a href="{{ path('task_list') }}" class="btn btn-primary">Retour à la liste des tâches</a>
        </section>
    </div>

{% endblock %}
