{% extends 'base.html.twig' %}

{% block header_title %}
    {{ include('task/_header.html.twig') }}
{% endblock %}

{% block body %}

    <div class="container pb-5">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header-tab card-header justify-content-between">
                    <div class="card-header-title font-size-lg text-capitalize font-weight-normal"><i
                                class="fa fa-tasks"></i>&nbsp;Liste des Tâches ({{ tasks.getTotalItemCount }})
                    </div>
                    <div class="list-group-horizontal">

                            <a class="btn btn-primary btnAll {% if not btn == 'btnAll' %} opacity-0 {% else %} opacity-1 {% endif %}" href="{{ path('task_list') }}"><i class="fas fa-list-ul"></i> Tout</a>

                            <a class="btn btn-danger btnTodo" href="{{ path('task_list_todo') }}"><i class="fas fa-times-circle"></i> Todo</a>

                            <a class="btn btn-warning btnProgress" href="{{ path('task_list_progress') }}"><i class="fas fa-spinner"></i> In Progress</a>

                            <a class="btn btn-success btnDone" href="{{ path('task_list_done') }}"><i class="fa fa-check"></i> Done</a>

                    </div>
                </div>
                {{ include('task/_task.html.twig') }}
                <div class="d-block card-footer d-inline-flex justify-content-between">
                    <div class="navigation">
                        {{ knp_pagination_render(tasks) }}
                    </div>
                    <div class="text-right">
                        <a href="{{ path('task_create') }}">
                            <button class="btn btn-primary">Ajouter une tâche</button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('assign') }}
{% endblock %}






