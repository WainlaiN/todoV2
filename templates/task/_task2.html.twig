<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center activity">
                <div><i class="fa fa-clock-o"></i><span class="ml-2">{{ "now"|date("d/m/Y h:m") }}</span></div>
                <div><span class="activity-done">Tâches({{ tasks|length }})</span></div>
                <div class="icons"><i class="fa fa-search"></i><i class="fa fa-ellipsis-h"></i></div>
            </div>
            <div class="mt-3">
                <ul class="list list-inline">
                    {% for task in tasks %}
                        <li class="d-flex justify-content-between">
                            <div class="d-flex flex-row align-items-center">
                                {% if task.isDone %}
                                    <i class="fa fa-check-circle checkIcon"></i>
                                {% elseif task.inProgress %}
                                    <i class="fas fa-spinner progressIcon"></i>
                                {% else %}
                                    <i class="fas fa-times-circle crossIcon"></i>
                                {% endif %}
                                <div class="ml-2">
                                    <a href="{{ path('task_edit', {'id' : task.id }) }}">
                                        <h6 class="mb-0">{{ task.title }} </a>  <small>par {{ task.user }}</small></h6>
                                    <div class="d-flex flex-row mt-1 text-black-50 date-time">
                                        <div><i class="fa fa-calendar-o"></i><span
                                                    class="ml-2">{{ task.createdAt|date("d/m/Y") }}</span></div>
                                        <div class="ml-3"><i class="fa fa-clock-o"></i><span class="ml-2">
                                            {% if task.inProgress %}
                                            assigné à :
                                                {{ task.assignedTo }}</small></span>

                                            {% endif %}</span></div>
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex flex-row align-items-center">
                                <div class="d-flex flex-column mr-2">
                                    <a href="{{ path('task_delete', {'id' : task.id }) }}">
                                    <i class="fas fa-trash-alt"></i></a>
                                </div>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</div>