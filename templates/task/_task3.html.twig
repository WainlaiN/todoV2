<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center activity">
                <div><i class="fa fa-clock-o"></i><span class="ml-2">{{ "now"|date("d/m/Y h:m") }}</span></div>
                <div><span class="activity-done">Done Activities(4)</span></div>
                <div class="icons"><i class="fa fa-search"></i><i class="fa fa-ellipsis-h"></i></div>
            </div>
            <div class="mt-3">
                <ul class="list list-inline">
                    {% for task in tasks %}
                        <li class="d-flex justify-content-between">
                            <div class="d-flex flex-row align-items-center"><i class="fa fa-check-circle checkicon"></i>
                                <div class="ml-2">
                                    <h6 class="mb-0">{{ task.title }}</h6>
                                    <div class="d-flex flex-row mt-1 text-black-50 date-time">
                                        <div><span class="ml-2"> {{ task.content |striptags| slice(0, 200) ~ '...' }}</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex flex-row align-items-center">
                                <div class="d-flex flex-column mr-2">
                                    <div class="profile-image">{% if task.isDone %}<i
                                                class="fas fa-check -align-right"></i>{% else %}<i
                                                class="fas fa-times"></i>{% endif %}
                                    </div>
                                    <span class="date-time"><i
                                                class="fas fa-clock"></i> {{ task.createdAt|date("d/m/Y") }}</span>
                                </div>
                                <i class="fa fa-ellipsis-h"></i>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</div>
